{
  // "extends": "@hc/typescript-config/esm-base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/esm",
    "declaration": true,

    "lib": ["ES2023", "DOM"],
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Bundler",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["**/*.test.ts"]
}
